
{{#> AuthForm }}
    <div>
        <h1 class="registration__title">Registration</h1>

        {{> Input name="first_name" type="text" placeholder="First name"}}
        {{> Input name="second_name" type="text" placeholder="Second name"}}
        {{> Input name="login" type="text" placeholder="Login"}}
        {{> Input name="email" type="text" placeholder="Email"}}
        {{> Input name="phone" type="text" placeholder="Phone"}}
        {{> Input name="password" type="password" placeholder="Password" value="test2001" isError=true}}
        {{> Input name="repassword" type="password" placeholder="Repeat password" value="test2002" isError=true errorMessage="Password mismatch" }}
    </div>

    <div>
        {{> Button type="submit" text="Sign up" }}

        <div class="registration__center">
            {{> Button type="button" text="Sign in" isLink=true }}
        </div>
    </div>
{{/AuthForm}}
